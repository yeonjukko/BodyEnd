<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BodyEndAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="android:textColorPrimary">@color/Primary_text</item>
        <item name="colorPrimaryDark">@color/Background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorAccent">@color/Accent</item>
    </style>

    <style name="MyNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/Background</item>
        <item name="android:divider">@color/Divider</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light_nodisable</item>
        <item name="colorAccent">@color/Accent</item>
    </style>

    <style name="MyDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>

    </style>
    <style name="MySectionTheme" >
        <item name="sectionColorIcon">@color/Primary_text</item>
        <item name="sectionColorText">@color/Primary_text</item>
        <item name="sectionColorNotification">@color/Primary_text</item>
        <item name="sectionBackgroundColorSelected">#A1D9D6</item>
        <item name="sectionBackgroundColor">#000000FF</item>
    </style>
    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/Background</item>
        <item name="android:divider">@color/Divider</item>
        <item name="drawerColor">@color/caldroid_white</item>
        <item name="sectionStyle">@style/MySectionTheme</item>
        <item name="colorAccent">@color/Accent</item>
        <item name="singleAccount">true</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light_nodisable</item>


    </style>

    <style name="MySettingTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/Primary</item>
        <item name="android:textColorPrimary">@color/Icons</item>
        <item name="colorPrimaryDark">@color/Background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Primary_text</item>

    </style>

    <style name="BodyEndCaldroid" parent="CaldroidDefault">
        <item name="styleCaldroidGridView">@style/BodyEndGridView</item>
    </style>


    <style name="BodyEndGridView" parent="@style/CaldroidDefaultDarkCalendarViewLayout">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">0.5dp</item>
        <item name="android:paddingRight">0.5dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#87dad8d8</item>
        <item name="sv_showcaseColor">#e9dedcdc</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#deffffff</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="myTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_vertical</item>

    </style>


</resources>
